{
  "swagger": "2.0",
  "info": {
    "title": "Fireblaze Vault",
    "version": "v1.0.0"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/pii": {
      "post": {
        "operationId": "PutPII",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PutPIIResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1PutPIIRequest"
            }
          }
        ],
        "tags": [
          "VaultPII"
        ]
      }
    },
    "/v1/pii/image": {
      "post": {
        "operationId": "PutPIIImage",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1ImageResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1ImageRequest"
            }
          }
        ],
        "tags": [
          "VaultPII"
        ]
      }
    },
    "/v1/pii/{token}": {
      "get": {
        "operationId": "GetPII",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetPIIResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "VaultPII"
        ]
      },
      "delete": {
        "operationId": "DelPII",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "properties": {}
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "VaultPII"
        ]
      }
    }
  },
  "definitions": {
    "ImageRequestFormat": {
      "type": "string",
      "enum": [
        "PNG",
        "JPG",
        "PDF",
        "GIF"
      ],
      "default": "PNG"
    },
    "PutPIIRequestDocumentType": {
      "type": "string",
      "enum": [
        "PASSPORT",
        "NATIONAL_ID",
        "DRIVING_LICENSE",
        "BIRTH_CERTIFICATE"
      ],
      "default": "PASSPORT"
    },
    "PutPIIResponseBackgroundCheck": {
      "type": "object",
      "properties": {
        "passed": {
          "type": "boolean",
          "format": "boolean"
        }
      }
    },
    "v1GetPIIResponse": {
      "type": "object"
    },
    "v1ImageRequest": {
      "type": "object",
      "properties": {
        "format": {
          "$ref": "#/definitions/ImageRequestFormat"
        },
        "country": {
          "type": "string"
        },
        "base64_data": {
          "type": "string"
        },
        "foreign_key": {
          "type": "string",
          "description": "useful to reference your CRM/BO/SF."
        }
      }
    },
    "v1ImageResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      }
    },
    "v1PutPIIRequest": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/PutPIIRequestDocumentType"
        },
        "full_name": {
          "type": "string"
        },
        "birth_date": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "issued_by": {
          "type": "string"
        },
        "issued_on": {
          "type": "string",
          "format": "date-time"
        },
        "expires_on": {
          "type": "string",
          "format": "date-time"
        },
        "address": {
          "$ref": "#/definitions/v1PutPIIRequestAddress"
        },
        "background_check": {
          "type": "boolean",
          "format": "boolean"
        },
        "approved": {
          "type": "boolean",
          "format": "boolean",
          "title": "does this customer pass KYC?"
        },
        "reason": {
          "type": "string",
          "description": "if customer doesn't pass KYC, provide a reason."
        }
      }
    },
    "v1PutPIIRequestAddress": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "postcode": {
          "type": "string"
        }
      }
    },
    "v1PutPIIResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        },
        "last_four": {
          "type": "string"
        },
        "request_ip": {
          "type": "string"
        },
        "user_agent": {
          "type": "string"
        },
        "background_check": {
          "$ref": "#/definitions/PutPIIResponseBackgroundCheck"
        }
      }
    }
  }
}
